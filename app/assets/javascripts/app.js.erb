var app = angular.module("rssDictator", ["ngResource", "ngRoute"]);

app.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when('/', {
        templateUrl: '<%= asset_path("templates/dashboard.html.erb") %>',
        controller: 'DashboardCtrl'
      }).
      when("/feeds/create", {
        templateUrl: '<%= asset_path("templates/create_feed.html.erb") %>',
        controller: 'FeedCtrl'
      }).
      when("/articles/create", {
        templateUrl: '<%= asset_path("templates/create_article.html.erb") %>',
        controller: 'ArticleCtrl'
      }).
      when("/settings", {
        templateUrl: '<%= asset_path("templates/voice_settings.html") %>',
        controller: 'VoiceSettingsCtrl'
      }).
      otherwise({
        redirectTo: '/'
      });
  }]);