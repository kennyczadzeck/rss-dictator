<header class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#dictator-header">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="pull-left logo">
        <a href="/#/">
          <div class="image">
            <%= image_tag "internet-dictator.png" %>
          </div>
          <div class="text">
            <h2 class="title">The Internet Dictator</h2>
            <p class="tag">"In online future, Internet reads <span>(to)</span> you!"</p>
          </div>
        </a>
      </div>
    </div>
    <nav>
      <ul class="nav navbar-nav pull-right collapse navbar-collapse" id="dictator-header">
        <% unless current_user %>
          <div class="sign-in-out">
            <li><%= link_to "Sign In", signin_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>
          </div>
        <% else %>
          <div class="user-menu">
            <li><a href="/#/settings">Voice Settings</a></li>
            <li><a href="/#/feeds/manage">Manage Feeds</a></li>
            <li><a href="/#/articles/manage">Manage Articles</a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "Sign Out", signout_path %></li>
               </ul>
             </li>
          </div>
        <% end %>
      </ul>
    </nav>
  </div>
</header>